<!DOCTYPE html>
<html>

	<head>
		<link rel="stylesheet" type="text/css" href="../../assets/application.css" />
	</head>

	<body>
		<div class="main-content ">
			<h2>Edit Reservation</h2>
			<div id="error" class="error">
				<% if flash[:error] %> <%= flash[:error] %> <% end %>
			</div>
			<%= form_for(@reservation, url: "/reservations/save", method: :post) do |f| %>
					<div class="long-editor-field">
						<%= f.label :reservation_date_time, :class => "long-input-label" %>:
						<%= f.text_field :reservation_date_time %><br />
					</div>
					<div class="long-editor-field">
						<%= f.label :party_size, :class => "long-input-label" %>:
						<%= f.text_field :party_size %><br />
					</div>
					<div class="long-editor-field">
						<%= f.label :notes, :class => "long-input-label" %>:
						<%= f.text_field :notes %><br />
					</div>
					<%= f.hidden_field :id, :value => @reservation.id %>
  				<%= f.submit :class => "ui-button", :id => "submit" %>
					<%= link_to "Cancel", {controller: "reservations", action: "details", id: @reservation.id}, class: "ui-button", :id => "back" %>
			<% end %>
		</div>
	</body>
</html>
